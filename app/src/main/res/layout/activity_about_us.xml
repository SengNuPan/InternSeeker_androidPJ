<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/flayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="16dp">
            <ImageView
                android:layout_width="170px"
                android:layout_height="170px"
                android:paddingTop="40dp"
                android:src="@drawable/intern_seeker"
                android:scaleType="fitCenter"
                android:layout_gravity="top|center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intern Seeker"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"

                android:textSize="40px"
                android:layout_marginTop="90dp"
                android:layout_gravity="bottom|center_horizontal"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/mylinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/flayout"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intern Seeker targets to those who has a problem with searching company for internship.Our app includes about many companies that they want to know .  "
                android:textSize="13dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/mylinear"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_marginLeft="100dp"
                android:textSize="40px"
                android:textStyle="bold">

                <TextView
                    android:id="@+id/version"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Version 1.0" />

                <TextView
                    android:id="@+id/developedby"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/version"
                    android:textSize="17dp"
                    android:layout_marginTop="15dp"
                    android:text="Developed by - " />

                <TextView
                    android:id="@+id/mseng"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/developedby"
                    android:textSize="15dp"
                    android:layout_marginTop="12dp"
                    android:text="Seng Nu Pan" />

                <TextView
                    android:id="@+id/mhmone"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_below="@id/mseng"
                    android:text="Hmone Nathar Kyaw" />

                <TextView
                    android:id="@+id/mhnin"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mhmone"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Hnin Su Nyein" />

                <TextView
                    android:id="@+id/msu"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mhmone"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Su Yati Myint" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>